generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int    @id @default(autoincrement())
  name  String
  phone String
}

model Driver {
  id           Int     @id @default(autoincrement())
  name         String
  is_available Boolean @default(true)

  current_lat Float
  current_lng Float

  car Car?

  @@index([is_available])
  @@index([current_lat, current_lng])
}

model Car {
  id           Int    @id @default(autoincrement())
  driver_id    Int    @unique
  model        String
  plate_number String

  driver Driver @relation(fields: [driver_id], references: [id])
}
